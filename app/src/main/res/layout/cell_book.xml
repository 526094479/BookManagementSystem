<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="@dimen/cornerRadius"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackgroundBorderless">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iv_cover_cell_book"
            android:layout_width="85dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/book_image_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_cell_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/bigger_text_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_cover_cell_book"
            app:layout_constraintTop_toTopOf="@+id/iv_cover_cell_book"
            tools:text="浮士愁" />

        <TextView
            android:id="@+id/tv_tip_author_cell_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_author"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/tv_name_cell_book"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_cell_book" />

        <TextView
            android:id="@+id/tv_author_cell_book"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tip_author_cell_book"
            app:layout_constraintEnd_toEndOf="@+id/tv_name_cell_book"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_tip_author_cell_book"
            app:layout_constraintTop_toTopOf="@+id/tv_tip_author_cell_book"
            tools:text="罗浮散客" />

        <TextView
            android:id="@+id/tv_intro_cell_book"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="简介：歌德，德国最伟大的诗人，在世界文学史上占有重要的地位，被称为与荷马、但丁、莎士比亚并列的四大文豪。《浮士德》是歌德的代表作，为诗体悲剧，描写主人公浮士德一生探求真理的痛苦经历，反映从文艺复兴到十九世纪初整个欧洲的历史，揭示了光明与黑暗，进步与落后，科学与迷信两种势力的不断斗争。"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover_cell_book"
            app:layout_constraintEnd_toEndOf="@+id/tv_author_cell_book"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_tip_author_cell_book"
            app:layout_constraintTop_toBottomOf="@+id/tv_tip_author_cell_book" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
