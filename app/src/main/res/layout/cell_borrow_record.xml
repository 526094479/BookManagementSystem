<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="@dimen/cornerRadius"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackgroundBorderless">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iv_cover_cell_borrow_record"
            android:layout_width="85dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/book_image_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_bookName_cell_borrow_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/bigger_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_tag_cell_borrow_record"
            app:layout_constraintStart_toEndOf="@+id/iv_cover_cell_borrow_record"
            app:layout_constraintTop_toTopOf="@+id/iv_cover_cell_borrow_record"
            tools:text="浮士愁" />

        <TextView
            android:id="@+id/tv_bookId_cell_borrow_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toTopOf="@+id/tv_userId_cell_borrow_record"
            app:layout_constraintEnd_toEndOf="@+id/tv_bookName_cell_borrow_record"
            app:layout_constraintStart_toStartOf="@+id/tv_bookName_cell_borrow_record"
            tools:text="书本ID：32156" />

        <TextView
            android:id="@+id/tv_userId_cell_borrow_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toTopOf="@+id/tv_borrow_time_cell_borrow_record"
            app:layout_constraintEnd_toEndOf="@+id/tv_bookName_cell_borrow_record"
            app:layout_constraintStart_toStartOf="@+id/tv_bookName_cell_borrow_record"
            tools:text="借书人ID：32156" />


        <TextView
            android:id="@+id/tv_borrow_time_cell_borrow_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toTopOf="@+id/tv_return_time_cell_borrow_record"
            app:layout_constraintEnd_toEndOf="@+id/tv_userId_cell_borrow_record"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_userId_cell_borrow_record"
            tools:text="借书时间：2016年9月16日" />

        <TextView
            android:id="@+id/tv_return_time_cell_borrow_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_bookName_cell_borrow_record"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_borrow_time_cell_borrow_record"
            tools:text="还书时间：" />

        <TextView
            android:id="@+id/tv_tag_cell_borrow_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="已还" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
